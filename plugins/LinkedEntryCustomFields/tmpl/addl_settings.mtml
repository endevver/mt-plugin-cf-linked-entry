<script type="text/javascript">
changeType = (function () {
    var oldChangeType = changeType;
    return function (s) {
        if(!s)
            s = document.getElementById('type');
        oldChangeType(s);
        
        var type_key = s.<mt:if name="new_object">options[s.selectedIndex].</mt:if>value;
        
        if (type_key == 'entry') {
            DOM.removeClassName('entry_blog-field', 'hidden');
            DOM.removeClassName('entry_categories-field', 'hidden');
        }
        else {
            DOM.addClassName('entry_blog-field', 'hidden');
            DOM.addClassName('entry_categories-field', 'hidden');
        }
    };
})();
</script>

<mtapp:setting id="entry_blog" label="Blog"><select id="entry_blog" name="entry_blog">
    <mt:Loop name="blogs">
        <option value="<mt:var name="blog_id">"<mt:if name="blog_selected"> selected="selected"</mt:if>><mt:var name="blog_name" escape="html"></option>
    </mt:Loop>
</select></mtapp:setting>
<mtapp:setting id="entry_categories"
    label="Category IDs"
    hint="Enter some IDs of categories in the selected blog to limit entries in this field to entries in one of those categories. Separate them with commas."
    show_hint="1">
    <input id="entry_categories" name="entry_categories" value="<mt:var name="entry_categories">">
</mtapp:setting>
